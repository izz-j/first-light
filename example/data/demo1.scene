;; -*- mode: common-lisp -*-

(in-package :first-light-example)

(scene-definition :demo1 (:enabled t)
  ((@camera
    ((transform :translation/current (vec 0 0 1))
     (camera :activep t
             :mode :orthographic)))
   (@player
    ((transform :rotation/incremental (vec 0 0 0.02)
                :scale/current (vec 64 64 64))
     (mesh :location "data/mesh/default.mesh")
     (mesh-renderer :shader :unlit-texture)
     (hit-points :hp 100))
    (@thing1
     ((transform :translation/current (vec 1 0 0))
      (mesh :location "data/mesh/default-small.mesh")
      (mesh-renderer :shader :unlit-texture)))
    (@thing2
     ((transform :translation/current (vec 0 1 0))
      (mesh :location "data/mesh/default-small.mesh")
      (mesh-renderer)))
    (@thing3
     ((transform :translation/current (vec -1 0 0))
      (mesh :location "data/mesh/default-small.mesh")
      (mesh-renderer :shader :unlit-texture)))
    (@thing4
     ((transform :translation/current (vec 0 -1 0))
      (mesh :location "data/mesh/default-small.mesh")
      (mesh-renderer))))))
